# MongoDB Environment Variables
# Copy this file to .env and update the values as needed

# MongoDB Root Credentials (for admin access)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_root_password_here

# MongoDB Database
MONGO_DATABASE=minisocial

# Application Database User (created by init script)
MONGO_APP_USERNAME=minisocial_user
MONGO_APP_PASSWORD=your_secure_app_password_here

# MongoDB Connection Details
MONGO_HOST=localhost
MONGO_PORT=27017

# Constructed connection strings (don't modify these)
# For local development
MONGO_CONNECTION_STRING=mongodb://${MONGO_APP_USERNAME}:${MONGO_APP_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DATABASE}

# For production (with authentication source)
MONGO_CONNECTION_STRING_PROD=mongodb://${MONGO_APP_USERNAME}:${MONGO_APP_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DATABASE}?authSource=${MONGO_DATABASE}
